
<MainLayout>:
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.width, self.height
    BoxLayout:
        size: root.size
        padding:5,5,5,5
        spacing:3
        orientation: "vertical"
        BoxLayout:
            Label:
                color: 0,0,0,1
                text: "Stats"
        BoxLayout:
            spacing: 5
            size_hint_max_y: 100
            padding:0,10,0,10
            QueueBox:
                size_hint:.1,1
                size_hint_min_x: 50
            BasicQueue:
                id: priority_queue
                # programmatic queboxes get added here
            QueueBox:
                size_hint:.1,1
                size_hint_min_x:50
        BoxLayout:
            size_hint_max_y:100
            BasicQueue:
                QueueBox:
                QueueBox:
                QueueBox:
                QueueBox:
        BoxLayout:
            padding: 0,10,0,0
            Button:
                text:'back'
            Button:
                text:"Forward"




<BasicQueue>:
    spacing: 5
    size_hint_max_y: 100
    padding:20,0,20,0

<QueueBox>:
    canvas:
        Color:
            rgb: 1,.6,0
        Rectangle:
            size: self.width, self.height
            pos: self.center_x-self.width/2,self.center_y-self.height/2
        Color:
            rgb:0,0,0
    Label:
        pos: root.center_x,root.center_y
        color: 0,0,0,1
        text: "##"



