
<MainLayout>:
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.width, self.height
    BoxLayout:
        size: root.size
        padding:5,5,5,5
        spacing:3
        orientation: "vertical"
        pos_hint:{"center_y":.5}
        BoxLayout:
            size_hint_min_y:100
            size_hint_max_y: 400
            size_hint:1,.3
            Label:
                color: 0,0,0,1
                text: "Step: " + root.curr_step
        BoxLayout:
            id: main_row
            pos_hint:{"center_y":.5}
            spacing: 5
            padding:0,10,0,10
#            QueueBox:
#            BasicQueue:
#                pos_hint:{"center_y":.5}
#                id: priority_queue
#                # programmatic queboxes get added here
#            QueueBox:
        BoxLayout:
            id: age_row
            size_hint_max_y:100
            #BasicQueue:
                #QueueBox:
                #QueueBox:
                #QueueBox:
                #QueueBox:
        BoxLayout:
            padding: 0,10,0,0
            size_hint_max_y: 100
            size_hint: 1, 1
            Button:
                text:'back'
                on_press: root.backward_press()
            Button:
                text:"Forward"
                on_press: root.forward_press()




<BasicQueue>:
    spacing: 5
    padding:20,0,20,0


<QueueBox>:
    size_hint_min_x:25
    size_hint_max_x:root.max_hint
    size_hint: 1, None
    size: self.width,self.width
    pos_hint:{"center_y":.5}
    BoxLayout:
        orientation: "vertical"
        canvas:
            Color:
                rgba: root.active_color
            Rectangle:
                size: self.width, self.height
                pos: self.center_x-self.width/2,self.center_y - self.width/2
            Color:
                rgb:0,0,0
        Label:
            color: 0,0,0,1
            text: "I: "+root.initial_label
        Label:
            color: 0,0,0,1
            text: root.time_label
        Label:
            color: 0,0,0,1
            text: "C: "+root.curr_label

<PHQueueBox@BoxLayout>:
    size_hint_min_x:25
    size_hint_max_x:100
    size_hint: 1, 1
    size: self.width,self.width
    pos_hint:{"center_y":.5}
    BoxLayout:
        orientation: "vertical"
        canvas:
            Color:
                rgb: 1,1,1
            Rectangle:
                size: self.width, self.height
                pos: self.center_x-self.width/2,self.center_y - self.width/2

